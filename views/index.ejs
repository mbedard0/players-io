<%- include('./partials/html-head.ejs') %>
<%- include('./partials/nav.ejs') %>

<main>
  <h1 class="text-white"><% if(user) { %>
    Welcome back, <%= user.profile.name %>.</h1>
  <% } else { %>
  <div class="hero min-h-screen">
  <div class="text-center hero-content">
    <div>
      <h1 class="mb-5 text-5xl font-bold text-gray animate__animated animate__fadeInDown">
            Hello there
          </h1> 
      <p class="mb-5 text-lightgray">
            Welcome to <b class="text-2xl">players.io.</b><br>Track your favorite English Premier League players here.<br>Get started by signing in.
          </p> 
          <a href="/auth/google" class="siwg-link">
            <button type="submit" class="siwg">
              <img id="siwg-image" alt="Sign in with Google" />
          </button>    </div>
  </div>
</div>
  <% } %>
  <% if (user?.profile.avatar) { %>
    <div class="avatar">
      <div class="mb-8 rounded-btn w-24 h-24">
      <img
        src="<%= user.profile.avatar %>" 
        alt="<%= user.profile.name %> avatar"
      >
      </div>
    </div>
  <% } %>
</main>

