<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/html-head.ejs') %>
  <%- include('../partials/nav.ejs')  %> 
<body>
  <main>
    <h1>Games</h1>
    <div class="overflow-x-auto">
      <table class="table w-full">
        <thead>
          <tr></tr>
        </thead>
        <tbody>
          <tr>
            <th></th>
            <td>
              <% results.forEach(fixture => { %>
                <div class=""><a class="link link-accent" href="/fixtures/<%= fixture.fixture.id %>"><%= fixture.teams.home.name %> vs. <%= fixture.teams.away.name %></a> |
                <%= fixture.fixture.date.slice(5,7) %>-<%= fixture.fixture.date.slice(8,10) %>-<%= fixture.fixture.date.slice(0,4) %> 
                </div>
              <% }) %> 
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="flex flex-col w-full">
      <div class="divider"></div> 
    </div>
  </main>
</body>
<%- include('../partials/footer') %>
</html>